<section class="cart py-16">
    <% if(session.cart){ %>
    <div class="order container mx-auto w-1/2">

        <div class="flex items-center border-b border-gray-300 pb-4">
            <i class="fas fa-shopping-cart"></i>
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>

        <div class="cake-list ">
            <% for(let cake of Object.values(session.cart.items)){ %>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%=cake.item.image%>" alt="">
                <div class="ml-4 flex-1">
                    <h1><%=cake.item.name%></h1>
                    <span><%=cake.item.size%></span>
                </div>
                <span class="flex-1"><%=cake.qty%></span>
                <span class="font-bold text-lg">Rs.<%=(cake.item.price)*(cake.qty)%></span>
            </div>
            <% } %>


        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount: </span>
                <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form class="mt-12" action="">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Phone Number">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <!-- <button class="btn-primary px-6 py-2 rounded-full font-bold mt-6 text-white" type="submit">Order
                            Now
                        </button> -->
                    </div>

                </form>
            </div>
            <a href=""
                class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full font-bold mt-6 text-white">Login
                to Continue</a>
        </div>

    </div>
<%} else {%>
    <div class="empty-cart py-4">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜—!</h1>
            <p class="text-gray-500 text-lg mb-6 ">You probably haven't ordered anything to eat. <br>
                To give yourself a treat, go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.svg" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-4">Go back</a>
        </div>

    </div>
<% } %>
</section>